    #header {
        margin: auto;
        font-family: Arial, Helvetica, sans-serif;
    }

    ul, ol {
        list-style: none;
    }

    .nav {
        flex-wrap: wrap;
        width: 50px; /* Le establecemos un ancho */
        margin: 0 auto; /* Centramos automáticamente */
    }

    .nav > li {
        float: left;
        position: relative; /* Necesario para posicionar el submenú */
    }

    .nav li a {
        height: 25px;
        align-items: center;
        background-color:  #f8f9f7 ;
        color: black;
        text-decoration: none;
        padding: 5px 0px;
        display: block;
    }

    .a {
        background-color: green;
    }

    .nav li a:hover {
        background-color: #434343;
    }

    /* Cambios para el menú desplegable */
    .nav li ul {
        display: none; 
        position: absolute; 
        min-width: 300px; 
        bottom: 100%; /* Posiciona el submenú arriba del elemento padre */
        left: -39px; /* Alinea el submenú a la izquierda del elemento padre */
    }

    .nav li:hover > ul {
        display: block; 
    }

    .nav li ul li {
        position: relative; 
    }

    /* Estilo para el div adicional en el submenú */
    .submenu-header {
        background-color: #1723bc;
